{% layout settings.customer_layout %}
<div class="customers-section">

<div id="template">
	
  <div class="extra-border clearfix">
    <h2 class="title">Activate Account</h2>
  </div>

    <p class="customer-note">Create your password to activate your account</p>

  {% form 'activate_customer_password' %}
    {{ form.errors | default_errors }}

    <div id="password" class="clearfix large_form">
      <label class="large" for="password"  style="width:150px">Password</label>
      <input type="password" value="" name="customer[password]"  id="customer_password" class="large password" size="16" />
    </div>
    <div id="password_confirm" class="clearfix large_form">
      <label class="large" for="password_confirmation" style="width:150px">Password Confirmation</label>
      <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
    </div>
    <div class="action_bottom">
      <input class="standard-button" type="submit" value="Activate Account" />
      <span class="customer-note">or</span>
      <input type="submit" class="cancel" name="decline" id="customer_decline" value="Decline Invitation" />
    </div>
  {% endform %}
</div><!-- .customers-section -->
</div>

