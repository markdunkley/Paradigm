

<div id="search"  >  
	
	<div class="smallbox">

	<h1 >Search</h1>
	<form action="/search" method="get">
		<p><input type="text"  name="q" value="{{search.terms  | escape}}" size="28" id="result-q" /> <input type="submit" value="Search" /></p>
	</form>
	
	</div><!-- smallbox -->

	{% if search.performed %}
	{% paginate search.results by 10 %}  
	
	{% if search.results == empty %}  
	<p class="center-text"><big>We couldn't find anything with the word "{{search.terms | escape}}" in it</big></p>              
	{% else %}  
	

<div class="extra-border clearfix">
	<h2>Search Results</h2>
</div><!-- .extra-border -->

	<table class="products">

		{% tablerow item in search.results cols:4  %}    

		{% if item.featured_image %}

		<a href="{{ item.url | within: collection }}"><span><span class="vertical-center"><img src="{{ item.images.first | product_img_url: 'medium' }}" alt="{{ item.title | escape }}" /></span></span>{% if item.compare_at_price_max > item.price %}<em>sale</em>{% endif %}<strong>{{ item.title }}</strong><small>{{ item.price  | money }}</small></a>


		{% else %}


		<h2>{{ item.title | link_to: item.url }}</h3>
			<span>{{ item.content | strip_html | truncatewords: 40 | highlight: search.terms }}</span>
			<div style="clear:left"></div>          


			{% endif %}

			{% endtablerow %}
		</table>
		
			{% endif %}<em></em>

		<div class="pagination">
			<div class="pagination-wrapper">
				{{ paginate | default_pagination }}
			</div><!-- .pagination-wrapper -->
		</div>

		{% endpaginate %}    
		{% endif %}

	</div>
